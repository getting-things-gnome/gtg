  <xs:include schemaLocation="http://xml.r00t2.io/schema/lib/types/unix.xsd"/>
  <xs:include schemaLocation="_types.xsd"/>

  <!-- ############################################################################################################# -->

  <xs:element name="config">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="backend">
          <xs:complexType>
            <xs:attribute name="module" type="t_gtg_backends" use="required"/>
            <!--
              TODO: Is this always required? Only required for certain backends?
            -->
            <xs:attribute name="pid" type="xs:positiveInteger" use="optional" default="1"/>
            <!--
              TODO: If you wanted to follow strict XML naming conventions, "Default" should be lowercase.
            -->
            <xs:attribute name="Default" type="t_gtg_strBool" use="optional" default="False"/>
            <xs:attribute name="enabled" type="t_gtg_strBool" use="optional" default="False"/>
            <!--
              TODO: Should this instead be an xs:list instead? How are tags entered?
              https://www.w3schools.com/xml/el_list.asp
            -->
            <xs:attribute name="attached-tags" type="xs:string" use="optional"/>
            <!--
              There's no real way to validate this (just as pid) if it's conditional on the backend used.
              XML Schema doesn't really have a concept of conditionals, just required vs. optional.
            -->
            <xs:attribute name="path" type="t_unix_anyfile" use="optional"/>
            <!--
              TODO: Are these all of the attributes for backends?
            -->
          </xs:complexType>
        </xs:element>
        <!--
          TODO: Does config only contain backend elements or are other elements included?
        -->
      </xs:sequence>
    </xs:complexType>
  </xs:element>

</xs:schema>
